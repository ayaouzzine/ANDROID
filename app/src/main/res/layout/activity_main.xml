<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authentification"
        android:textSize="100px"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true"
        android:layout_marginTop="450px" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:hint="Username"
        android:textCursorDrawable="@null"
        android:inputType="text"
        android:drawableStart="@drawable/account"
        android:drawablePadding="5dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="250dp"
        android:gravity="start"
        android:drawableLeft="@drawable/account" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textCursorDrawable="@null"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="5dp"
        android:inputType="textPassword"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="320dp"
        android:id="@+id/password"
        android:gravity="start"
        android:drawableLeft="@drawable/lock" />

    <ImageView
        android:id="@+id/toggle_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginStart="330dp"
        android:scaleType="centerCrop"
        android:onClick="toggle"
        android:clickable="true"
        android:src="@drawable/eye_off"
        android:layout_marginLeft="330dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:id="@+id/okbutton"
        android:textAllCaps="false"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="480dp"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:background="@drawable/round_button_2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/register1"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="sans-serif"
        android:text="Vous n'avez pas de compte?"
        android:textColor="#FFF"
        android:textSize="12dp"
        android:focusable="true" />

    <TextView
        android:id="@+id/register2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="600dp"
        android:fontFamily="sans-serif"
        android:clickable="true"
        android:text="  CrÃ©er un"

        android:layout_toEndOf="@+id/register1"
        android:textColor="#00d9d9"
        android:textSize="12dp"
        android:focusable="true"
        android:layout_toRightOf="@+id/register1" />

</RelativeLayout>